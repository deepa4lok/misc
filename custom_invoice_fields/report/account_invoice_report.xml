<odoo>
    <template id="report_invoice_document_inherit_custom_fields" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@name='payment_term']" position="after">
            <div class="row mt32">
                <div class="col-6">
                    <strong>Mileage      :</strong> <span t-field="o.mileage"/></br>
                    <strong>License Plate:</strong> <span t-field="o.license_plate"/></br>
                    <strong>Model        :</strong> <span t-field="o.model"/></br>
                </div>
            </div>
        </xpath>
    </template>
</odoo>