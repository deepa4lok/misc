<odoo>
    <template id="report_invoice_document_inherit_custom_fields" inherit_id="account.report_invoice_document">
            <xpath expr="//field[@name='narration']" position="after">
            <div class="row mt32">
                <div class="col-6">
                    <strong>Mileage:</strong> <span t-field="doc.mileage"/>
                </div>
                <div class="col-6">
                    <strong>License Plate:</strong> <span t-field="doc.license_plate"/>
                </div>
                <div class="col-6">
                    <strong>Model:</strong> <span t-field="doc.model"/>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
