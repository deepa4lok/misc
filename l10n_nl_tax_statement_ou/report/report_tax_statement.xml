<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_tax_statement_filters" inherit_id="l10n_nl_tax_statement.report_tax_statement_filters">
        <xpath expr="//div[hasclass('nl_tax_act_as_row') and hasclass('labels')]" position="inside">
            <div class="nl_tax_act_as_cell">Operating Unit</div>
        </xpath>
        <xpath expr="//div[hasclass('nl_tax_act_as_row') and hasclass('labels')]/following-sibling::div" position="inside">
            <div class="nl_tax_act_as_cell">
                <span t-field="o.operating_unit_id"/>
            </div>
        </xpath>
    </template>

</odoo>
