    <record id="monta_get_product_stock_wizard_form" model="ir.ui.view">
        <field name="name">monta.product.stock.wizard.form</field>
        <field name="model">monta.product.stock.wizard</field>
        <field name="arch" type="xml">
            <form string="Get Monta Products Stock">
                 <sheet>
                     <h4>
                         Fetch Monta Stock!
                     </h4>
                     <group>
                        <field name="is_sku"/>
                        <field name="name" attrs="{'invisible':[('is_sku', '=', False)], 'required':[('is_sku', '=', True)]}"/>
                     </group>
                 </sheet>
                <footer>
                    <button string="Get Monta Products Stock"
                            type="object" name="action_fetch_stock" class="btn btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

