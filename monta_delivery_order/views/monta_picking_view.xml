<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_picking_from_odooto_monta_form" model="ir.ui.view">
            <field name="name">picking.from.odooto.monta.form</field>
            <field name="model">picking.from.odooto.monta</field>
            <field name="arch" type="xml">
                <form string="Monta Picking" create="0" edit="0" delete="0" duplicate="0">
                    <header>
                        <button string="Generate Payload" name="generate_payload" type="object"/>
                        <button string="Call Monta Interface" name="action_call_monta_interface" type="object"/>
                        <field name="status" widget="statusbar" statusbar_visible="draft,successful,failed" statusbar_colors='{"draft":"blue","successful":"blue", "failed":"red"}'/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1 class="d-flex">
                                <field name="picking_id" readonly="True"/>
                                <field name="picking_type_code" invisible="True"/>
                            </h1>
                        </div>
                        <group>
                            <group col="4">
                                <field name="partner_delivery_address_id"/>
                                <field name="partner_invoice_address_id" />
                                <field name="sale_id" attrs="{'column_invisible':[('picking_type_code', '!=', 'outgoing')]}"/>
                                <field name="purchase_id" attrs="{'column_invisible':[('picking_type_code', '!=', 'incoming')]}"/>
                                <field name="monta_response_code"/>
                            </group>
                            <group col="4">
                                <field name="planned_shipment_date" string="Planned Date"/>
                                <field name="shipped" string="Shipped or Received Date"/>
                                <field name="monta_order_name" readonly="True"/>
                            </group>
                        </group>
                        <group>
                            <field name="message"/>
                        </group>
                        <notebook>
                            <page name="monta_stock_move_ids" string="Move lines">
                                <field name="monta_stock_move_ids" readonly="True">
                                    <tree string="Moves">
                                        <field name="move_id"/>
                                        <field name="product_id"/>
                                        <field name="ordered_quantity"/>
                                    </tree>
                                    <form string="Moves">
                                        <group col="4">
                                             <field name="move_id"/>
                                             <field name="product_id"/>
                                             <field name="ordered_quantity"/>
                                             <field name="monta_inbound_forecast_id"/>
                                        </group>
                                         <notebook>
                                             <page name="Outbound Batches" attrs="{'invisible':[('parent.picking_type_code', '!=', 'outgoing')]}">
                                                 <field name="monta_outbound_batch_ids" readonly="True">
                                                     <tree string="Batches">
                                                        <field name="batch_id"/>
                                                        <field name="batch_ref"/>
                                                        <field name="batch_quantity"/>
                                                        <field name="monta_create_date" string="Shipped Date"/>
                                                         <field name="stock_move_line"/>
                                                     </tree>
                                                     <form string="Inbound">
                                                        <group>
                                                            <field name="batch_id"/>
                                                            <field name="batch_ref"/>
                                                            <field name="batch_quantity"/>
                                                        </group>
                                                     </form>
                                                 </field>
                                             </page>
                                             <page name="Monta Inbound" attrs="{'invisible':[('parent.picking_type_code', '!=', 'incoming')]}">
                                                <field name="monta_inbound_line_ids" readonly="True">
                                                    <tree string="Inbound">
                                                        <field name="inbound_id"/>
                                                        <field name="inbound_quantity"/>
                                                    </tree>
                                                    <form string="Inbound">
                                                        <group>
                                                            <group>
                                                                <field name="inbound_id"/>
                                                                <field name="inbound_quantity"/>
                                                            </group>
                                                            <notebook>
                                                                <page string="Batches">
                                                                    <field name="monta_batch_ids" readonly="True">
                                                                        <tree>
                                                                            <field name="batch_ref"/>
                                                                            <field name="batch_quantity"/>
                                                                            <field name="monta_create_date"/>
                                                                            <field name="stock_move_line"/>
                                                                        </tree>
                                                                    </field>
                                                                </page>
                                                            </notebook>
                                                        </group>
                                                    </form>
                                                </field>
                                             </page>
                                         </notebook>
                                    </form>
                                </field>
                            </page>
                            <page name="shipping_comment" string="Shipping Comment">
                                <field name="shipping_comment"/>
                            </page>
                            <page name="payload" string="Monta Payload">
                                <field name="json_payload" readonly="True"/>
                            </page>
                            <!--<page name="monta_response_message" string="Monta Response Message">-->
                                <!--<field name="monta_response_message" readonly="True"/>-->
                            <!--</page>-->
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
            </record>

        <record model="ir.ui.view" id="view_monta_picking_tree">
            <field name="name">picking.from.odooto.monta.tree</field>
            <field name="model">picking.from.odooto.monta</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Monta Picking" create="0" edit="0" duplicate="0" delete="0">
                    <field name="picking_id"/>
                    <field name="partner_delivery_address_id"/>
                    <field name="partner_invoice_address_id" />
                    <field name="sale_id" />
                    <field name="purchase_id" />
                    <field name="planned_shipment_date" string="Planned Date"/>
                    <field name="shipped" string="Shipped or Received Date"/>
                    <field name="status" string="Sent To Monta status"/>
                    <field name="picking_status" />
                    <field name="batches_status" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_monta_get_inbound_tree">
            <field name="name">monta.inboundto.odoo.move.tree</field>
            <field name="model">monta.inboundto.odoo.move</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Monta Inbounds" create="0" edit="0" duplicate="0" delete="0">
                    <field name="monta_move_line_id"/>
                    <field name="product_id"/>
                    <field name="inbound_quantity"/>
                    <field name="inbound_id"/>
                </tree>
            </field>
        </record>

        <record id="view_monta_filter" model="ir.ui.view">
                <field name="name">picking.from.odooto.monta.search</field>
                <field name="model">picking.from.odooto.monta</field>
                <field name="arch" type="xml">
                    <search string="Jobs">
                        <filter name="draft_status" string="Not yet sent to Monta" domain="[('status', '=', 'draft')]"/>
                        <filter name="successful_status" string="Successfully sent to Monta" domain="[('status', '=', 'successful')]"/>
                        <filter name="failed_status" string="Not successfully sent to Monta" domain="[('status', '=', 'failed')]"/>
                        <separator/>
                        <filter name="picking_draft" string="Picking Draft" domain="[('picking_status', '=', 'draft')]"/>
                        <filter name="picking_waiting" string="Picking Waiting" domain="[('picking_status', 'in', ('waiting', 'confirmed'))]"/>
                        <!--<filter name="picking_confirmed" string="Picking Waiting" domain="[('picking_status', '=', 'confirmed')]"/>-->
                        <filter name="picking_assigned" string="Picking Ready" domain="[('picking_status', '=', 'assigned')]"/>
                        <filter name="picking_done" string="Picking Done" domain="[('picking_status', '=', 'done')]"/>
                        <filter name="picking_cancel" string="Picking Cancelled" domain="[('picking_status', '=', 'cancel')]"/>
                        <separator/>
                        <filter name="no_batches" string="No Batches Received" domain="[('batches_status', '=', 'no_batches')]"/>
                        <filter name="received_batches" string="Batches Received" domain="[('batches_status', '=', 'received')]"/>
                        <filter name="partial_received" string="Partial Batches Received" domain="[('batches_status', '=', 'partial_received')]"/>
                        <separator/>
                        <group expand="0" string="Group By">
                            <filter string="Monta Order Sent Status" name="status" domain="[]" context="{'group_by': 'status'}"/>
                            <filter string="Picking Status" name="pick_status" domain="[]" context="{'group_by': 'picking_status'}"/>
                            <filter string="Batches Status" name="batches_status" domain="[]" context="{'group_by': 'batches_status'}"/>
                        </group>
                    </search>
                </field>
            </record>

        <record model="ir.actions.act_window" id="action_monta_outbound_order">
            <field name="name">Outbound Order</field>
            <field name="res_model">picking.from.odooto.monta</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_monta_picking_tree"/>
            <field name="domain">[('picking_type_code', '=', 'outgoing')]</field>
        </record>

        <record model="ir.actions.act_window" id="action_monta_inbound_forecaste">
            <field name="name">Inbound Forecast</field>
            <field name="res_model">picking.from.odooto.monta</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_monta_picking_tree"/>
            <field name="domain">[('picking_type_code', '=', 'incoming')]</field>
        </record>

        <record model="ir.actions.act_window" id="action_monta_inbounds_get">
            <field name="name">Inbounds</field>
            <field name="res_model">monta.inboundto.odoo.move</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_monta_get_inbound_tree"/>
            <field name="domain">[('inbound_id', '!=', False)]</field>
        </record>

</odoo>