<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.event.sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="carrier_id" options="{'no_open':True,'no_create': True}"/>
            </xpath>
            <xpath expr="//page[@name='customer_signature']" position="before">
                <page string="Monta Delivery Block" name="monta_delivery_block">
                    <group>
                        <field name="monta_delivery_block_id"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>