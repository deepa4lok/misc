<odoo>
    <template id="sale_order_portal_content_inherit_sale_stock_inherit_website_sale_delivery_monta"
        name="Shipping tracking on orders followup"
        inherit_id="delivery.sale_order_portal_content_inherit_sale_stock_inherit_website_sale_delivery">
        <xpath expr="//t[@t-elif='picking.carrier_tracking_url']" position="replace">
            <t t-elif="picking.monta_carrier_tracking_url">
                <a t-att-href="picking.monta_carrier_tracking_url" target="_blank">
                    <span t-field="picking.carrier_tracking_ref"/>
                </a>
            </t>
        </xpath>
    </template>
</odoo>
