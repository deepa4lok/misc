<odoo>
  <data>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form.account.reconcile.extended</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
          <xpath
                expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']"
                position="before"
            >
                <field
                    name="migration_remarks"
                    optional="show"
                />
            </xpath>
            <xpath
                expr="//field[@name='invoice_line_ids']/form/sheet/group/field[@name='quantity']"
                position="before"
            >
                <field
                    name="migration_remarks"
                />
            </xpath>
            <xpath
                expr="//notebook//field[@name='line_ids']/tree/field[@name='date_maturity']"
                position="after"
            >
                <field
                    name="migration_remarks"
                    optional="show"
                />
            </xpath>
        </field>
    </record>

