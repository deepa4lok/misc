<odoo>
    <!-- Form view modification to add the priority and SLA fields -->
    <record id="view_helpdesk_ticket_form_inherit" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form.inherit</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk_mgmt.ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="priority"/>
            </xpath>
            <xpath expr="//page[@name='other_info']" position="after">
                <page>
                    <group>
                        <field name="response_time_overdue"/>
                        <field name="resolution_time_overdue"/>
                        <field name="remaining_response_time_hours"/>
                        <field name="remaining_resolution_time_hours"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
