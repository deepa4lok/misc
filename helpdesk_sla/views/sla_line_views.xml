<odoo>
    <!-- Form view for SLA Line -->
    <record id="view_sla_line_form" model="ir.ui.view">
        <field name="name">sla.line.form</field>
        <field name="model">sla.line</field>
        <field name="arch" type="xml">
            <form string="SLA Line">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="priority"/>
                        <field name="response_time_hours"/>
                        <field name="resolution_time_hours"/>
                        <field name="next_working_day"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view for SLA Line -->
    <record id="view_sla_line_tree" model="ir.ui.view">
        <field name="name">sla.line.tree</field>
        <field name="model">sla.line</field>
        <field name="arch" type="xml">
            <tree string="SLA Lines">
                <field name="name"/>
                <field name="priority"/>
                <field name="response_time_hours"/>
                <field name="resolution_time_hours"/>
                <field name="next_working_day"/>
            </tree>
        </field>
    </record>
</odoo>
